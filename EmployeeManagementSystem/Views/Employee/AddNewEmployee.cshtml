@model Employee

@{
    ViewData["Title"] = "AddNewEmployee";
    Layout = "~/Views/Shared/BaseTemplate.cshtml";
}

<title>Add New Employee - Griffin SC</title>
<h2>Add New Employee</h2>
<br />

<form method="post">
    <div class="mb-3">
        <label for="NameAndSurname" class="form-label">Name and Surname:</label>
        <input type="text" asp-for="NameAndSurname" class="form-control" id="NameAndSurname">
        <span asp-validation-for="NameAndSurname" class="text-danger" style="font-weight:bold"></span>
    </div>

    <div class="mb-3">
        <label for="Salary" class="form-label">Salary:</label>
        <input type="text" asp-for="Salary" class="form-control" id="Salary">
        <span asp-validation-for="Salary" class="text-danger" style="font-weight:bold"></span>
    </div>

    <div class="mb-3">
        <label for="City" class="form-label">City:</label>
        <input type="text" asp-for="City" class="form-control" id="City">
        <span asp-validation-for="City" class="text-danger" style="font-weight:bold"></span>
    </div>

    <div class="mb-3">
        <label for="ExperienceLevel">Choose the Experience Level:</label>
        <select asp-for="ExperienceLevel" name="ExperienceLevel" id="ExperienceLevel">
            <option value="---">---Select---</option>
            <option value="Junior Developer">Junior Developer</option>
            <option value="Middle Developer">Middle Developer</option>
            <option value="Senior Developer">Senior Developer</option>
        </select>
        <span asp-validation-for="ExperienceLevel" class="text-danger" style="font-weight:bold"></span>
    </div>

    <div class="mb-3">
        <label for="BirthDate" class="form-label">Birth Date:</label>
        <input type="date" asp-for="BirthDate" class="form-control" id="BirthDate">
        <span asp-validation-for="BirthDate" class="text-danger" style="font-weight:bold"></span>
    </div>

    <br />
    <button type="submit" value="Send" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/>
            <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3z"/>
        </svg>
        Send
    </button>
    &nbsp; &nbsp;
    <a class="btn btn-dark" asp-controller="Employee" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
        </svg>
        Back
    </a>
    <br /> <br />
</form>
